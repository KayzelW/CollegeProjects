<Window x:Class="DatabaseView.UpdateRecord"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DatabaseView"
        mc:Ignorable="d"
        Title="UpdateRecord" Height="150" Width="300">
    <Grid>
        <StackPanel>
            <TextBox x:Name="nameTextBox" x:FieldModifier="public" Margin="10"/>
            <TextBox x:Name="emailTextBox" x:FieldModifier="public" Margin="10"/>
            <Button Content="Сохранить" Click="SaveButton_Click" Width="100" HorizontalAlignment="Right" Margin="0,10,10,0"/>
        </StackPanel>
    </Grid>
</Window>
